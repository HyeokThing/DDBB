<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.ddbb.domain.mapper.BoardMapper">

    <!-- tb_post 테이블 전체 컬럼 -->
    <sql id="postColumns">
        comment_id
        , project_id
        , member_id
        , content
        , created_date
        , modified_date
    </sql>

    <!-- member 테이블 전체 컬럼 -->
    <sql id="MemberPostColumns">
        member_id
        , name
        , id
        , password
        , phone
        , email
    </sql>

    <!-- 게시글 저장 -->
    <insert id="member_save" parameterType="com.project.ddbb.domain.vo.MemberVO" useGeneratedKeys="true" keyProperty="member_id">
        INSERT INTO member (
        <include refid="MemberPostColumns" />
        ) VALUES (
        #{member_id}
        , #{name}
        , #{id}
        , #{password}
        , #{phone}
        , #{email}
        )
    </insert>



    <!-- 게시글 저장 -->
    <insert id="save" parameterType="com.project.ddbb.domain.vo.BoardVO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board (
        <include refid="postColumns" />
        ) VALUES (
        #{commentId}
        , #{projectId}
        , #{memberId}
        , #{content}
        , NOW()
        , NULL
        , 0
        )
    </insert>

    <!-- 게시글 리스트 조회 -->
    <select id="findAll" resultType="com.project.ddbb.domain.vo.BoardVO">
        SELECT
        <include refid="postColumns" />
        FROM
        board
        WHERE
        status = 0
        ORDER BY
        comment_id DESC
    </select>

    <!-- 게시글 수정 -->
    <update id="update" parameterType="com.project.ddbb.domain.vo.BoardVO">
        UPDATE board
        SET
            updated_date = NOW()
          , content = #{content}
          , member_id = #{menberId}
          , notice_yn = #{noticeYn}
        WHERE
            comment_id = #{commentId}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE board
        SET
            status = 1
        WHERE
            comment_id = #{commentId}
    </delete>
</mapper>